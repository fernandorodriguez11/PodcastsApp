{% extends 'base.html.twig' %}

{% block title %}Hello RegistroController!{% endblock %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('js/comprueba_password.js') }}"></script>
    <script src="{{ asset('js/validaciones.js') }}"></script>
{% endblock %}

{% block body %}
<style>
    a, a:hover{
        text-decoration: none;
    }
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


{% if mensaje != "" %}
    <p>{{mensaje}}</p>
{% endif %}

<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 150px;
        "></div>
  <!-- Background image -->

  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Registro de Usuario</h2>
   
            {{ form_start(formulario, {attr: {autocomplete: "off"}}) }}
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            {{ form_row(formulario.nombre, {attr:{'class': 'form-control', autocomplete: 'off',placeholder: 'fernando'}})}}
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            {{ form_row(formulario.apellidos, {attr:{'class': 'form-control', autocomplete: 'off',placeholder: 'rodriguez de tembleque'}})}}
                        </div>
                    </div>
                </div>
                
                <!-- Email input -->
                <div class="form-outline mb-4">
                    {{ form_row(formulario.email, {attr:{'class': 'form-control', autocomplete: 'off',placeholder: 'example@gmail.com'}})}}
                    <span id="emailError" style="color: red"></span>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    {{ form_row(formulario.password, {attr:{'class': 'form-control', required:'true', autocomplete: 'off',placeholder: '**********'}})}}
                    <span id="textoValidacion" style="color: red"></span>
                </div>
                <div class="form-outline mb-4">
                    <label for="passwordR">Repetir Password</label>
                    <input type="password" name="passwordR" class="form-control" id="passwordR" placeholder="*******">
                    <span id="textoError" style="color: red"></span>
                </div>


                {{ form_row(formulario.submit, {label: 'Registrar Usuario', attr:{'class': 'btn btn-primary btn-block mb-4'}})}}

            {{ form_end(formulario) }}
            <!-- 2 column grid layout with text inputs for the first and last names -->
        

          <div class="text-center">
            <p>Vuelve al <a href="{{ path('login') }}">Login</a></p>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block body %}

<!-- Section: Design Block -->
<section class="text-center">
  <!-- Background image -->
  <div class="p-5 bg-image" style="
        background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');
        height: 200px;
        "></div>
  <!-- Background image -->

  <div class="card mx-6 mx-md-5 shadow-5-strong" style="
        margin-top: -100px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5">Inicia Sesión</h2>
          {{ form_start(formulario, {attr: {autocomplete: "off"}}) }}
                
                <!-- Email input -->
                <div class="form-outline mb-4">
                    {{ form_row(formulario.email, {attr:{'class': 'form-control', autocomplete: 'off',placeholder: 'example@gmail.com'}})}}
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    {{ form_row(formulario.password, {attr:{'class': 'form-control', autocomplete: 'off',placeholder: '**********'}})}}
                </div>

                {{ form_row(formulario.submit, {label: 'Iniciar Sesion', attr:{'class': 'btn btn-primary btn-block mb-4'}})}}

            {{ form_end(formulario) }}
          <div class="text-center">
            <p>No estás registrado? <a href="{{ path('registro_usuario') }}">Registrate Aquí</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Section: Design Block -->


{% endblock %}

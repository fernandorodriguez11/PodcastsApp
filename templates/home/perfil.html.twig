{% extends 'base.html.twig' %}

{% block title %}Perfil{% endblock %}

{% block stylesheets %} 
  {{ parent() }}
  <link rel="stylesheet" href="{{asset('css/home/perfil.css')}}" />
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('js/comprueba_password.js') }}"></script>
    <script src="{{ asset('js/validaciones.js') }}"></script>
{% endblock %}

{% block body %}

{{ parent() }}

<section class="text-center">

  <!-- Background image -->

    <div class="card-body py-5 px-md-5">

      <div class="row d-flex justify-content-center">
        <div class="col-lg-8">
          <h2 class="fw-bold mb-5" >Perfil</h2>
   
            {{ form_start(formulario, {attr: {autocomplete: "off"}}) }}
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            {{ form_row(formulario.nombre, {attr:{'class': 'form-control', autocomplete: 'off',placeholder: 'fernando'}})}}
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                            {{ form_row(formulario.apellidos, {attr:{'class': 'form-control', autocomplete: 'off',placeholder: 'rodriguez de tembleque'}})}}
                        </div>
                    </div>
                </div>
                
                <!-- Email input -->
                <div class="form-outline mb-4">
                    {{ form_row(formulario.email, {attr:{'class': 'form-control', autocomplete: 'off',placeholder: 'example@gmail.com'}})}}
                    <span id="emailError" class="rojo"></span>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    {{ form_row(formulario.password, {attr:{'class': 'form-control', value: usuario.password, required: false, autocomplete: 'off',placeholder: '**********'}})}}
                    <span id="textoValidacion" class="rojo"></span>
                </div>
                <div class="form-outline mb-4">
                    <label for="passwordR">Repetir Password</label>
                    <input type="password" name="passwordR" class="form-control" id="passwordR" placeholder="**********">
                    <span id="textoError" class="rojo"></span>
                </div>


                {{ form_row(formulario.submit, {label: 'Editar Usuario', attr:{'class': 'btn btn-primary btn-block mb-4'}})}}

            {{ form_end(formulario) }}

        </div>
      </div>
    </div>
</section>

{% endblock %}
